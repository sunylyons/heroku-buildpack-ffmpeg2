#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install ffmpeg"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://johnvansickle.com/ffmpeg/builds/ffmpeg-git-amd64-static.tar.xz"

cd $BUILD_DIR
mkdir -p $VENDOR_DIR

echo "Downloading libvips: " $DOWNLOAD_URL | indent
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar -xJf -
mv ffmpeg-git-* ffmpeg

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/ffmpeg.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:$HOME/vendor/ffmpeg"' >> $PROFILE_PATH
